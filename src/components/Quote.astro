---
 const { header, subheader, text} = Astro.props
 import Button from '../components/Button.astro';
---
<div class="p-9 md:p-20">
<div class=" p-9 md:p-20 text-center items-center">
    <h2 class=" text-4xl md:text-7xl md:pb-3">"{header}"</h2>
    <h3 class=" text-2xl md:text-4xl pb-4 md:pb-9">- {subheader}</h3>
    <p class="text-base mx-auto md:w-[660px] pb-6 md:pb-6">{text}</p>
    <Button variant="primary" size="small">Contact</Button> 

</div>
</div>